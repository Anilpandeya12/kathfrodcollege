<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kathford.ktm.yuvi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
      <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
 
    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
 
    <!-- Creates a custom permission so only this app can receive its messages. -->
    <permission
        android:name="kathford.ktm.yuvi.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
 
    <uses-permission android:name="kathford.ktm.yuvi.permission.C2D_MESSAGE" />
 
    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
 
    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
 
    <!-- Permission to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />
 
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/kath"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="kathford.ktm.yuvi.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity  android:name=".CollegeWebsite"/>
         <activity
            android:name="kathford.ktm.yuvi.StudentRoomActivity"/>
         <activity
            android:name=".NewstudentRegister"/>
         <activity
            android:name=".LibraryActivity"/>
         <activity
            android:name=".NewsEventActivity"/>
         <activity
            android:name=".Download"/>
         <activity
            android:name=".DirectoryActivity"/>
         <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
 
                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
 
                <category android:name="kathford.ktm.yuvi" />
            </intent-filter>
        </receiver>
 
        <service android:name=".GCMIntentService" />
    </application>

</manifest>
